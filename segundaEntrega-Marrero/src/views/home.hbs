<h1>
    HOME PAGE
</h1>

<ul class="collection">
    <table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
        </tr>
        {{/each}}
    </tbody>
    </table>
</ul>